<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/config_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dkgray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/lat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal|numberSigned"
                android:text="40.056885"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/lon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal|numberSigned"
                android:text="116.308142"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近POI半径:"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/ex_radius"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="0.4"
                android:inputType="numberDecimal|numberSigned"
                android:numeric="integer"
                android:text="500"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="米"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/reversegeocode"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_selector"
                android:onClick="searchButtonProcess"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/ui_size" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_selector"
                android:onClick="goToNextPage"
                android:text="下一页"
                android:textColor="@color/white"
                android:textSize="@dimen/ui_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/newVersion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="是否返回新数据"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/config_id">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/poi_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:text="附近POI展示"
                android:textColor="#FF0000"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/poi_list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>